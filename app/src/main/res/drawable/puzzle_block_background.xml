<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="#A7E1FF"
                android:endColor="#A7E1FF"
                android:angle="270" />
           <stroke
            android:width="0dp"
            android:color="#A7E1FF" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#C7969B"
                android:endColor="#C7969B"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#C7969B" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#434154"
                android:startColor="#434154"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#434154" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>